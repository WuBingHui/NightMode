<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MarioTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <!-- 隐藏Activity窗口的ActionBar -->
        <item name="windowActionBar">false</item>
        <!-- 隐藏Activity窗口的Title标题栏 -->
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="custom_attr_button_color">@color/button_color</item>
        <item name="custom_attr_text_color">@color/text_color</item>
        <item name="custom_attr_app_bg">@color/bg_color</item>

    </style>

    <style name="MarioTheme_Day" parent="Theme.AppCompat.Light.DarkActionBar" >
        <!-- 隐藏Activity窗口的ActionBar -->
        <item name="windowActionBar">false</item>
        <!-- 隐藏Activity窗口的Title标题栏 -->
        <item name="windowNoTitle">true</item>
        <!-- 日间模式下 "custom_attr_app_bg" 的赋值为#FFFFFF -->
        <item name="custom_attr_app_bg">#ffffff</item>
        <item name="custom_attr_text_color">#000000</item>
        <item name="custom_attr_button_color">#374A6E</item>

    </style>

    <style name="MarioTheme_Night" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 隐藏Activity窗口的ActionBar -->
        <item name="windowActionBar">false</item>
        <!-- 隐藏Activity窗口的Title标题栏 -->
        <item name="windowNoTitle">true</item>
        <!-- 夜间模式下 "custom_attr_app_bg" 的赋值为#1F1F1F -->
        <item name="custom_attr_app_bg">#000000</item>
        <item name="custom_attr_text_color">#ffffff</item>
        <item name="custom_attr_button_color">#FFF35454</item>

    </style>



</resources>



